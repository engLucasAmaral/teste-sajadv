                                        <copy file="src/main/resources/glassfish-resources-docker.xml" tofile="src/main/webapp/WEB-INF/glassfish-resources.xml"/>
                                    </tasks>
                                </configuration>
                            </execution>
                        </executions>
                    </plugin>
                </plugins>
            </build>
        </profile>        
